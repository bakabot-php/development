{
    "name": "bakabot/development",
    "type": "metapackage",
    "description": "Composer metapackage for development libraries used by Bakabot.",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "bakabot/codestandard": "^1.0",
        "dg/bypass-finals": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^9.3",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.4"
    },
    "config": {
        "lock": false,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
