{
    "name": "bakabot/development",
    "type": "metapackage",
    "description": "Composer metapackage for development libraries used by Bakabot.",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "bakabot/codestandard": "^2.0",
        "brainmaestro/composer-git-hooks": "^2.8",
        "dg/bypass-finals": "^1.3",
        "ergebnis/composer-normalize": "^2.15",
        "lctrs/psalm-psr-container-plugin": "^1.3",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.3 || 10.0-dev",
        "slowprog/composer-copy-file": "~0.3",
        "vimeo/psalm": "^4.4"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "lock": false,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
